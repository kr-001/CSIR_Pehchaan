<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update User Details"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextUpdatedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title" />
        <EditText
            android:id="@+id/editTextUpdatedCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="I.D. Card No. " />

        <EditText
            android:id="@+id/editTextUpdatedDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Designation" />

        <EditText
            android:id="@+id/editTextUpdatedDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Division" />

        <EditText
            android:id="@+id/editTextUpdatedLabName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lab Name" />

        <EditText
            android:id="@+id/editTextUpdatedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address" />

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Password"/>


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save" />
        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Important Note: Modify only the details you want to change, and leave the remaining details unchanged. Afterward, click the Save button."
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


