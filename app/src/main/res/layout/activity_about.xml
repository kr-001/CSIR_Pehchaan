<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_border"
        android:padding="16dp">



        <!-- About Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/languageSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="@string/en_hin" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_marginBottom="16dp"/>


        <!-- Project Logo -->

        <!-- Project Description -->

        <ImageView
            android:id="@+id/project_logo"
            android:layout_width="201dp"
            android:layout_height="154dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_foreground"
            android:rotation="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:animateLayoutChanges="true"
            android:rotationX="0"
            android:rotationY="0"
            android:layoutAnimation="@anim/rotate_anim" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_border"
            android:padding="16dp"
            android:text="@string/kr_summary"
            android:layout_marginBottom="20dp"/>

        <!-- Need of Project -->
        <!-- Need of Project Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/need_of_project"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/need_of_projec"
            android:background="@drawable/profile_border"
            android:padding="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/profile_border"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Photo and Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Photo -->
                <ImageView
                    android:id="@+id/imageViewYourPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/kuma_ravi_round" />

                <!-- Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="fill_horizontal"
                    android:text="@string/kumar_ravi"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Summary -->
            <TextView
                android:id="@+id/textViewSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/summary_text"
                android:textSize="14sp" />

            <!-- LinkedIn -->
            <TextView
                android:id="@+id/textViewLinkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:drawableStart="@mipmap/linkedin_icon"
                android:drawablePadding="8dp" />

        </LinearLayout>


        <!-- Dr. Neeraj Bhanot's Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_border"
            android:padding="16dp"
            android:layout_marginBottom="16dp">
            <!-- Dr. Neeraj Bhanot's Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Photo -->
                <ImageView
                    android:id="@+id/imageViewDrPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/neeraj_bhanot"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"/>

                <!-- Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dr_neeraj_bhanot"
                    android:layout_marginLeft="10dp"
                    android:textSize="26sp"
                    android:gravity="fill_horizontal"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Dr. Neeraj Bhanot's Summary -->
            <TextView
                android:id="@+id/textNeerajViewSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dr_neeraj_bhanot_summary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Dr. Neeraj Bhanot's LinkedIn -->
            <TextView
                android:id="@+id/textViewLinkedin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:drawableStart="@mipmap/linkedin_icon"
                android:drawablePadding="8dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
